<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Rectangle?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.question0_3.view.MainMenu"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <HBox spacing="10">
            <Rectangle fx:id="avatar"/>
            <Label fx:id="userName"/>
            <Label fx:id="userScore"/>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10" prefWidth="300">
            <Label text="The main menu is here..." alignment="CENTER"/>
            <Button text="new game" onMouseClicked="#newGame" prefWidth="300"/>
            <Button text="profile" onMouseClicked="#profile" prefWidth="300"/>
            <Button text="score board" onMouseClicked="#scoreBoard" prefWidth="300"/>
            <Button text="exit" onMouseClicked="#exit" prefWidth="300"/>
        </VBox>
    </center>
</BorderPane>
